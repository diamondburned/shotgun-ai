{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "noFallthroughCasesInSwitch": true,
    "strict": false
  },
  "fmt": {
    "lineWidth": 100
  },
  "tasks": {
    "server": "deno run -A https://deno.land/std@0.208.0/http/file_server.ts -p 9000",
    "serve": "./build_frontend.ts && deno task server"
  },
  "imports": {
    "./": "./",
    "/": "./",
    "std/": "https://deno.land/std@0.166.0/",
    "esm.sh/": "https://esm.sh/v133/"
  }
}
